<h1><%= @artist.name %></h1>

<p><%= @artist.age %></p>

<% if @artist.cover.attached? %>
  <img src="<%= url_for(@artist.cover) %>" width="500" />
<% end %>

<h3>Albums</h3>
<ul>
  <% if @artist.albums.any? %>
    <% @artist.albums.each do |album| %>
      <li>
        <%= link_to album.title, admin_album_path(album) %>
      </li>
    <% end %>
  <% else %>
    <li>There are not albums</li>
  <% end %>
</ul>

<hr>

<div class="actions">
  <%= link_to "Back", admin_artists_path %>
  <%= link_to "Edit", edit_admin_artist_path(@artist) %>
  <%= link_to "Delete", admin_artist_path(@artist), method: :delete, data: { confirm: "Really delete the artist?" } %>
</div>

