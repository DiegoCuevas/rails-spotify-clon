<h1><%= @album.title %></h1>

<% if @album.cover.attached? %>
  <img src="<%= url_for(@album.cover) %>" width="500" />
<% end %>

<div class="actions">
  <%= link_to "Edit", edit_admin_album_path(@album) %>
  <%= link_to "Delete", admin_album_path(@album), method: :delete, data: { confirm: "Really delete the album?" } %>
</div>

<%= link_to 'Back', admin_albums_path %>
